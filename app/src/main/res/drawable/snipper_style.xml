<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Set background color -->
            <corners android:radius="10dp" /> <!-- Set corner radius -->
            <stroke
                android:width="1dp"
                android:color="@color/black" /> <!-- Add stroke if needed -->
        </shape>
    </item>
    <!-- Dropdown arrow -->
    <item
        android:drawable="@drawable/ic_dropdown_arrow"
        android:gravity="end|center_vertical"
        android:right="8dp" /> <!-- Adjust right padding as needed -->
</layer-list>
